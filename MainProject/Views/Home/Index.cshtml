@{
	ViewData["Title"] = "Home Page";
}
@using ComponentLibrary.Components
@using ComponentLibrary.Models
@model List<List<int>>

@{
	List<List<int>> testList = new List<List<int>>();
	testList.Add(new List<int>() { 2, 6, 8 });
	testList.Add(new List<int>() { 2, 3, 9, 7 });
	testList.Add(new List<int>() { 41, 18 });
}
<div id="main">
	<textarea id="TextArea1" rows="1" cols="50" readonly="readonly">Input desired number of lists and press "Enter"</textarea>
	<input id="Text1" type="number" onkeypress="inputNumberOfLists(event)" />
</div>
<input id="Button1" type="button" value="Get result" />

<div>
	<!--	await Component.InvokeAsync(nameof(ListComponent),testList)-->
</div>

<script>
	function listOnKeyPress(e) {
		var k = e.which;
		if (!(k == 13 || (k >= 48 && k < 58)))
			e.preventDefault();
	}
</script>
<script type="text/javascript">
	function inputNumberOfLists(e) {
		e = e || window.event;
		var key = e.keyCode;
		if (key == 13) //Enter
		{
			var number = document.getElementById("Text1").value;
			var container = document.getElementById("main");
			for (var i = 0; i < number; i++) {
				container.appendChild(document.createElement("br"));
				var input = document.createElement("textarea");
				input.name = "List" + (i + 1);
				input.onkeypress = "listOnKeyPress(event)";
				container.appendChild(input);
			}
			return true; //return true to submit, false to do nothing
		}
	}
</script>
